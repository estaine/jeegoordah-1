@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Jeegoordah</title>
        <script data-main="/scripts/jeegoordah/app.js" src="/scripts/require.js" type="text/javascript"></script>
        <link href="/scripts/bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css" />        
        <link href="/scripts/jeegoordah/jeegoordah.css" rel="stylesheet" type="text/css" />        
    </head>
    <body>
        <nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">Jeegoordah</span>
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                @* Navigation is hiden at page load. It become visible after right navigation element is activated according to current hash. See nav.js *@
                <ul class="nav navbar-nav" style="display:none !important">
                    <li id="nav-total"><a href="#total">Total</a></li>
                    <li id="nav-people"><a href="#people">People</a></li>
                    <li id="nav-events"><a href="#events">Events</a></li>
                    <li id="nav-spendings"><a href="#spendings">Spendings</a></li>
                    <li id="nav-directs"><a href="#directs">Directs</a></li>              
                </ul>                        
            </div>
        </nav>            
        <div id="notification" class="notification alert alert-success alert-dismissable" style="display: none">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <div id="notification-content"></div>
        </div>
        <div class="page-content container">
            <div class="page-header">
                <h1 id="module-name"></h1>
            </div>                
                 
            <div id="modules" style="display:none">
                <div id="module-events">                
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Create Event</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" id="createEventForm">
                                <div class="form-group">
                                    <label for="inputEventName">Name</label>
                                    <input type="text" class="form-control" name="Name" required>
                                </div>
                                <div class="form-group">
                                    <label for="inputEventStartDate">Start Date</label>
                                    <input type="date" class="form-control" name="StartDate">
                                </div>     
                                <div class="form-group">
                                    <label for="inputEventDescription">Description</label>
                                    <textarea class="form-control" rows="3" name="Description"></textarea>
                                </div>                            
                                <button type="submit" class="btn btn-primary">Create</button>
                            </form>                            
                        </div>
                    </div>                                            
                    <table class="table table-striped table-hover entity-list">
                        <thead>
                            <tr>
                                <th class="event-name">Name</th>
                                <th>Start Date</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody id="event-list">                        
                        </tbody>
                    </table>
                </div>

                <div id="module-total">               
                </div>            
            </div>            
        </div>        
    </body>
</html>